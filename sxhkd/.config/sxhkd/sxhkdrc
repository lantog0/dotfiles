mod4 + o; {e,i,m,l}
  {st -e vim,st -e top,st -e ncmpcpp, anki}

mod4 + Return
  st

mod4 + w
  brave-browser

mod4 + d
  dmenu_run

mod4 + b
  zatread

XF86AudioLowerVolume
  pactl set-sink-volume 0 -2%

XF86AudioRaiseVolume
  pactl set-sink-volume 0 +2%

XF86AudioMute 
  exec pactl set-sink-mute 0 toggle

XF86MonBrightnessDown
  bright

XF86MonBrightnessUp
  bright -u

mod4 + m; {p, r}
  mpc {toggle, seek 0}
# Changes to next/previous tracks
XF86AudioNext
	mpc next
XF86AudioPrev
	mpc prev
# Restart track
mod4 + period
  mpc seek +10
# Seek backward in song
mod4 + comma
  mpc seek -10
