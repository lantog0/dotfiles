#!/bin/sh

delim=" âš« "
status=""

trap 'update' 5

out () {
  status=""
  if [ "$(cat /sys/class/net/e*/operstate)" = "up" ]; then
    status="${status} E: up"
    status="${status}$delim"
  fi

  wireless=$(grep "^w" /proc/net/wireless)

  status="${status} WiFi: "

  if [ -z "$wireless" ]; then
    status="${status}down"
  else
    status="${status}\x03$(echo "$wireless" | awk '{ print int($3 * 100 / 70) "%" }')\x01"
  fi

  status="${status}$delim"

  bat="$(cat /sys/class/power_supply/BAT?/capacity)"

  if [ $bat -le 20 ]; then
    status="${status}Battery: \x04${bat}\x01%"
  else
    status="${status}Battery: ${bat}%"
  fi

  status="${status}$delim"

  vol="$(pactl list sinks | awk -F "/" '/^\s*Volume/ { gsub(/ /, "", $2); print "Vol:", $2  }')"

  if [ ! -z $vol ]; then
    status="${status}${vol}"
    status="${status}$delim"
  fi

  status="${status}$(df -h . | awk ' /^\/dev/ { print "Space:", $4  } ')"

  status="${status}$delim"

  status="${status}$(free -h | awk ' NR==2 { print "Mem:", $NF  }')"

  status="${status}$delim"

  status="${status}$(date '+%I:%M%p' | tr -d '\n')"
  xsetroot -name " $(echo -e "$status" | tr -d '\n')"
}

update () {
  out &
  wait
}

while :; do
  update
  sleep 30 &
  wait
done
